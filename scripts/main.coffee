getChannel = (res) -> res.robot.adapter.client.rtm.dataStore.getChannelGroupOrDMById(res.message.room)

module.exports = (robot) ->
  robot.respond /.*(emoji|эмоджи|эмодзи)/i, (res) ->
    emojiHelp = "\n
